@model Project_2_cmpg323.Models.GalleryIndexModel

<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
        body {
            background-image: url('@Url.Content("~/images/aspbackgroundimage.png")');
            background-repeat: no-repeat, repeat;
            background-size: cover;
        }
        h1{
            text-align: center;
        }
</style>

<div class="container body=content">

    <h1><b>Gallery Items</b></h1>

    <div class="row gallery-content">
        @foreach (var image in Model.Images)
        {
            <div class="gallery-image-container drop-shadow">
                <a asp-controller="Gallery" asp-action="Detail" asp-route-id="@image.Id">
                    <div class="gallery-image" style="background-image:url(@image.Url)"></div>
                </a>
            </div>
        }
    </div>
</div>
